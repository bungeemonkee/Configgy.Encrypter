<Window x:Class="Configgy.Encrypter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Configgy.Encrypter"
        mc:Ignorable="d"
        Title="Configgy Encrypter" Height="768" Width="1024">
    <Window.DataContext>
        <local:Context/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="100" ItemsSource="{Binding Certificates}" SelectedItem="{Binding Certificate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="DisplayName" />
        <TextBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="100" AcceptsReturn="True" Text="{Binding Input, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" />
        <TextBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="100" IsReadOnly="True" Text="{Binding Output}" Grid.Row="2" />
    </Grid>
</Window>
